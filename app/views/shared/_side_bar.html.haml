.side_bar
  .side_bar__upper
    .side_bar__upper-contents
      .side_bar__upper-contents-username
        = current_user.name
      .side_bar__upper-contents-icon
      %a 
        = link_to edit_user_path(current_user) do
          = icon('fas', 'edit',class: 'edit-icon')
      %a 
        = link_to destroy_user_session_path, method: :delete do
          = icon('fas', 'sign-out-alt',class: 'signout-icon')
  .side_bar__lower
    - current_user.coaches.each do |coach|
      .side_bar__lower-trainer-contents
        = link_to coach_messages_path(coach) do
          .side_bar__lower-trainer-contents-trainer_name
            = coach.name
          .side_bar__lower-trainer-contents-latest_message
            = coach.show_last_message